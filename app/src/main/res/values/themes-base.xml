<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">#A84B4B</item>
        <item name="colorSecondaryVariant">#C5B52A</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorHint">#9A9BA1</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.News.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="Theme.News.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.News.SimpleDraweeViewListImage">
        <item name="actualImageScaleType">centerCrop</item>
        <item name="failureImage">@drawable/ic_error</item>
        <item name="failureImageScaleType">centerInside</item>
        <item name="placeholderImageScaleType">centerInside</item>
        <item name="progressBarAutoRotateInterval">1000</item>
        <item name="progressBarImage">@drawable/ic_loading</item>
        <item name="progressBarImageScaleType">centerInside</item>
        <item name="roundBottomLeft">true</item>
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">8dp</item>
    </style>

    <style name="Theme.News.SimpleDraweeViewDetail">
        <item name="actualImageScaleType">centerCrop</item>
        <item name="failureImage">@drawable/ic_error</item>
        <item name="failureImageScaleType">centerInside</item>
        <item name="placeholderImageScaleType">centerInside</item>
        <item name="progressBarAutoRotateInterval">1000</item>
        <item name="progressBarImage">@drawable/ic_loading</item>
        <item name="progressBarImageScaleType">centerInside</item>
    </style>

</resources>


